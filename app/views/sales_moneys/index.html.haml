.default-container
  = render './header.html.haml'

  - breadcrumb :sales
  = render './bread_crumb'
.l-container-clearfix
  .l-content-sales
    %section.l-chapter-container
      %h2.l-chapter-head 売上・振込申請
      %ul.mypage-nav-list
        %li
          .mypage-nav-list-item.clearfix
            .l-left
              現在の売上金
            .l-right
              = current_user.sales_moneys.pluck(:get_money).sum.to_s(:currency, unit: "¥", precision: 0)
        %li
          = link_to user_sales_moneys_history_path, class: "mypage-nav-list-item clearfix" do
            %div
              売上履歴
            %div
              %i.fas.fa-angle-right
        %li
          = link_to root_path, class: "mypage-nav-list-item clearfix" do
            %div
              売上金の振込申請期限
            %div
              %i.fas.fa-angle-right
    %section.l-chapter-container.sales-transfer-second
      %ul.mypage-nav-list
        %li
          = link_to root_path, class: "mypage-nav-list-item clearfix" do
            %div
              振込申請して現金を受け取る
            %div
              %i.fas.fa-angle-right
        %li
          = link_to root_path, class: "mypage-nav-list-item clearfix" do
            %div
              振込申請履歴
            %div
              %i.fas.fa-angle-right
        %li
          = link_to root_path, class: "mypage-nav-list-item clearfix" do
            %div
              振込申請スケジュール
            %div
              %i.fas.fa-angle-right
  = render './users/l-side.html.haml'

= render './footer.html.haml'