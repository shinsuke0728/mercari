.single-container
  = render partial: './subheader'
  .single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "/users/new" do
          新規会員登録
      .login-form-inner
        .btn-sns-facebook
          %i.fab.fa-facebook
          = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path
        .btn-sns-google
          %i.fab.fa-google-plus-g
          = link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path
      .login-meil
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-default", placeholder: "メールアドレス"
            / %input{type: "email", class: "input-default", name: "email", placeholder: "メールアドレス"}
          .form
            = f.password_field :password, autocomplete: "current-password", class: "input-default", placeholder: "パスワード"
            / %input{type: "password", class: "input-default", name: "password", placeholder: "パスワード"}
          .form
            = recaptcha_tags
          .form
            = f.submit "ログイン",class: "login-submit"
            %a パスワードをお忘れの方
  = render partial: './subfooter'
